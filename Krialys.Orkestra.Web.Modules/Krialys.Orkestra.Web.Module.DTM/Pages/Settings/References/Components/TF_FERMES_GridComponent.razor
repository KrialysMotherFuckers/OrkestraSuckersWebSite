@* Customisable datagrid parameters *@
<OrkaGenericGridComponent TEntity="TF_FERMES"
                       @ref="Ref_TF_FERMES"
                       IsWithinTab=true
                       AllowResizing="true"
                       AllowPdfExport="false"
                       AllowExcelExport="true"
                       AllowCsvExport="false"
                       EnablePersistence="true">
    <ChildContent>

        @* Customisable datagrid events *@
        <GridEvents TValue="TF_FERMES"
                    DataBound=Ref_TF_FERMES.DataBoundHander
                    OnToolbarClick="@Ref_TF_FERMES.OnToolbarClickAsync"
                    ContextMenuItemClicked="@Ref_TF_FERMES.OnContextMenuItemClickedAsync" OnLoad=Ref_TF_FERMES.OnLoadHandler Destroyed=Ref_TF_FERMES.OnDestroyed />

        <GridEditSettings AllowAdding="AllowModify"
                          AllowEditing="AllowModify"
                          AllowDeleting="false"
                          ShowConfirmDialog="true"
                          ShowDeleteConfirmDialog="true"
                          Mode="EditMode.Dialog"
                          Dialog="@Extends.GridEditSettingDialog">

            @* Customisable edit/save/cancel dialog events *@
            <FooterTemplate Context="entity">
                <SfButton IsPrimary="true"
                          CssClass="e-success"
                          OnClick="@(() => SaveAsync(Ref_TF_FERMES, entity))">
                    @Ref_TF_FERMES.EditButtonText
                </SfButton>
                <SfButton OnClick="@(() => Ref_TF_FERMES.DataGrid.CloseEditAsync())">
                    @Ref_TF_FERMES.CancelButtonText
                </SfButton>
            </FooterTemplate>

        </GridEditSettings>

    </ChildContent>
</OrkaGenericGridComponent>