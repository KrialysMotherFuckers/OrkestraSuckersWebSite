                <SfButton OnClick="@(() => Ref_TRST_STATUTS.DataGrid.CloseEditAsync())">
                    @Ref_TRST_STATUTS.CancelButtonText
                </SfButton>
            </FooterTemplate>

        </GridEditSettings>

    </ChildContent>
