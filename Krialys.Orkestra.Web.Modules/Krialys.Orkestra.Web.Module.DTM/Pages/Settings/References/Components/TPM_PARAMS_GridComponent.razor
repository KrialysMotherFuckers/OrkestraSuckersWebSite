@* Customisable datagrid parameters *@
<OrkaGenericGridComponent TEntity="TR_WST_WebSite_Settings"
                       @ref="Ref_TPM_PARAMS"
                       AllowResizing="true"
                       AllowPdfExport="false"
                       AllowExcelExport="true"
                       AllowCsvExport="false"
                       EnablePersistence="true">
    <ChildContent>

        @* Customisable datagrid events *@
        <GridEvents TValue="TR_WST_WebSite_Settings"
                    OnToolbarClick="@Ref_TPM_PARAMS.OnToolbarClickAsync"
                    ContextMenuItemClicked="@Ref_TPM_PARAMS.OnContextMenuItemClickedAsync" OnLoad=Ref_TPM_PARAMS.OnLoadHandler Destroyed=Ref_TPM_PARAMS.OnDestroyed />

        <GridEditSettings AllowAdding="AllowModify"
                          AllowEditing="AllowModify"
                          AllowDeleting="false"
                          ShowConfirmDialog="true"
                          ShowDeleteConfirmDialog="true"
                          Mode="EditMode.Dialog"
                          Dialog="@Extends.GridEditSettingDialog">

            @* Customisable edit/save/cancel dialog events *@
            <FooterTemplate Context="entity">
                <SfButton IsPrimary="true"
                          CssClass="e-success"
                          OnClick="@(() => SaveAsync(Ref_TPM_PARAMS, entity))">
                    @Ref_TPM_PARAMS.EditButtonText
                </SfButton>
                <SfButton OnClick="@(() => Ref_TPM_PARAMS.DataGrid.CloseEditAsync())">
                    @Ref_TPM_PARAMS.CancelButtonText
                </SfButton>
            </FooterTemplate>

        </GridEditSettings>

    </ChildContent>
</OrkaGenericGridComponent>